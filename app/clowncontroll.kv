<MyLabel@Label>:
    font_size: 20
    height: 25
    background_color: 0, 0, 0, 0
    background_normal: ""
    canvas.before:
        Color:
            rgba: 0, 1, 0, 0.5
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]  #---- This rounds the corners --- #

<MyButton@Button>:
    font_size: 20
    background_color: 0, 0, 0, 0
    background_normal: ""
    canvas.before:
        Color:
            rgba: 0, 1, 0, 0.5
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]  #---- This rounds the corners --- #


<LoginScreen>
    password: password
    username: username
    login_error: login_error
    GridLayout:
        cols: 1
        size_hint: 0.8, 0.4
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        GridLayout:
            cols: 2
            spacing: 20
            size_hint: 1, None
            height: '150dp'
            Label:
                text: 'username'
                font_size: 36
                size_hint: 0.5, None
                height: '48dp'
            TextInput:
                id: username
                font_size: 36
                multiline: False
                hint_text: 'username'
                hint_text_color: 0.5, 0.5, 0.5, 1
                size_hint: 1, None
                height: '48dp'
            Label:
                text: 'password'
                font_size: 36
                size_hint: 0.5, None
                height: '48dp'
                background: (0, 0, 1, 1)
            TextInput:
                id: password
                font_size: 36
                multiline: False
                hint_text: 'password'
                hint_text_color: 0.5, 0.5, 0.5, 1
                size_hint: 1, None
                height: '48dp'
        Button:
            text: 'Login'
            font_size: 36
            size_hint: 1, None
            height: '48dp'
            on_release: root.validate_user()
            background_normal: ""
            background_color: (0, 0, 0.7, 1)
        Label:
            text: ''
            color: 1, 0, 0, 1
            size_hint: 1, None
            height: '48dp'
            id: login_error

<ChatScreen>
    input: input
    output: output
    GridLayout:
        cols: 1
        size_hint: 0.8, 0.8
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        GridLayout:
            cols: 3
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Button:
                text: 'Logout'
                size_hint: 1, None
                height: '48dp'
                on_release: root.logout()
            Button:
                text: 'Back'
                size_hint: 1, None
                height: '48dp'
                on_release: root.back()
            Button:
                text: 'Departments'
                size_hint: 1, None
                height: '48dp'
                on_release: root.departments()
        Button:
            text: 'Open Chat'
            size_hint: 1, None
            height: '48dp'
            on_release: root.open_connection()
        TextInput:
            id: output
            multiline: True
        GridLayout:
            cols: 2
            size_hint: 1, None
            TextInput:
                id: input
                multiline: False
                hint_text: 'Type your message here'
                hint_text_color: 0.5, 0.5, 0.5, 1
                size_hint: 1, None
                height: '48dp'
            Button:
                text: 'Send'
                size_hint: 1, None
                height: '48dp'
                on_release: root.send_message()



            
